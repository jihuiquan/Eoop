<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="@dimen/dp_64"     android:id="@+id/icon"    android:orientation="vertical" >    <TextView        android:id="@+id/search_comment"        android:layout_width="match_parent"        android:layout_height="@dimen/dp_32"        android:background="@color/list_item_selector_color"        android:gravity="center_vertical"        android:paddingLeft="@dimen/dp_10"        android:text="我关注的人"        android:textColor="@color/grey"        android:textSize="@dimen/sp_16" />    <RelativeLayout        android:id="@+id/front"        android:layout_width="fill_parent"        android:layout_height="@dimen/dp_64"        android:background="@drawable/m_list_item_selector"        android:paddingRight="@dimen/dp_12"        android:tag="front"        android:visibility="visible" >        <CheckBox            android:id="@+id/contact_item_checkbox"            android:layout_width="@dimen/dp_20"            android:layout_height="@dimen/dp_20"            android:layout_centerVertical="true"            android:layout_marginLeft="@dimen/dp_12"            android:background="@drawable/m_tree_checkbox_selector_default"            android:button="@null"            android:clickable="false"            android:focusable="false"            android:visibility="gone" />        <ImageView            android:id="@+id/contact_item_icon"            android:layout_width="@dimen/dp_44"            android:layout_height="@dimen/dp_44"            android:layout_centerVertical="true"            android:layout_marginLeft="@dimen/dp_12"            android:layout_toRightOf="@id/contact_item_checkbox"            android:scaleType="fitXY" />        <RelativeLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="@dimen/dp_15"            android:layout_toRightOf="@id/contact_item_icon" >            <TextView                android:id="@+id/contact_item_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:singleLine="true"                android:text="张小丽"                android:textColor="@color/list_text_title_for_contac"                android:textSize="@dimen/sp_16" />            <TextView                android:id="@+id/contact_item_sub_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignBottom="@id/contact_item_name"                android:layout_marginLeft="@dimen/dp_15"                android:layout_toRightOf="@id/contact_item_name"                android:ellipsize="end"                android:singleLine="true"                android:text="Alisa"                android:textColor="@color/list_text_subTitle_for_contact"                android:textSize="@dimen/sp_12"                android:visibility="visible" />            <TextView                android:id="@+id/contact_item_content"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@id/contact_item_name"                android:layout_marginTop="@dimen/dp_6"                android:ellipsize="end"                android:singleLine="true"                android:text="随时沟通"                android:textColor="@color/list_text_subTitle"                android:textSize="@dimen/sp_12"                android:visibility="visible" />        </RelativeLayout>    </RelativeLayout>    <ImageView        android:id="@+id/no_attention"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginTop="10dp"        android:src="@drawable/icon_nofocus"        android:visibility="gone" /></LinearLayout>
<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="wrap_content"    android:gravity="bottom" >    <RelativeLayout        android:id="@+id/xlistview_header_content"        android:layout_width="fill_parent"        android:layout_height="60dp" >        <TextView            android:id="@+id/xlistview_header_hint_textview"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="@string/xlistview_header_hint_normal" />        <TextView            android:id="@+id/xlistview_header_lasttime"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignRight="@id/xlistview_header_hint_textview"            android:layout_below="@id/xlistview_header_hint_textview"            android:text="@string/xlistview_header_last_time"            android:textSize="12sp" />        <TextView            android:id="@+id/xlistview_header_time"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/xlistview_header_hint_textview"            android:layout_centerInParent="true"            android:layout_toRightOf="@id/xlistview_header_lasttime"            android:textSize="12sp" />        <ImageView            android:id="@+id/xlistview_header_arrow"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignLeft="@id/xlistview_header_lasttime"            android:layout_centerInParent="true"            android:layout_marginLeft="-40dp"            android:src="@drawable/arrow" />        <ProgressBar            android:id="@+id/xlistview_header_progressbar"            android:layout_width="30dp"            android:layout_height="30dp"            android:layout_alignLeft="@id/xlistview_header_lasttime"            android:layout_centerInParent="true"            android:layout_marginLeft="-45dp"            android:visibility="invisible" />    </RelativeLayout></LinearLayout>
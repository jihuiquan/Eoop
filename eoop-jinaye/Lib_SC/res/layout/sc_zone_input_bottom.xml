<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:gravity="center_vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/chat_bottom_line" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5" >
            <Button
                android:id="@+id/zone_input_face"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/m_chat_emotion_selector" />
            <Button
                android:id="@+id/zone_input_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/m_chat_send_btn"
                android:enabled="true"
                android:paddingBottom="@dimen/dp_7"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_7"
                android:text="@string/chat_send"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />
            <EditText
                android:id="@+id/zone_input_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/zone_input_send"
                android:layout_toRightOf="@id/zone_input_face"
                android:background="@drawable/m_shape_chat_edit_text_bg"
                android:gravity="center_vertical"
                android:hint="评论"
                android:maxHeight="@dimen/dp_128"
                android:minHeight="@dimen/dp_32"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/chat_edittext__color"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
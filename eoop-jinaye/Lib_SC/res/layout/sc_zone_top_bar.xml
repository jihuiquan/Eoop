<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_top_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_44"
    android:background="#3fb0ff">

    <TextView
        android:id="@+id/common_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_200"
        android:singleLine="true"
        android:text="同事圈"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20" />

    <RelativeLayout
        android:id="@+id/common_top_left_rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/common_top_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dp_15"
          android:src="@drawable/zone_ico_message" />

        <TextView
            android:id="@+id/common_top_main_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/m_shape_bg_red_circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/common_top_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/zone_ico_pencil"
        android:visibility="visible" />
</RelativeLayout>
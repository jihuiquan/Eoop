<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/zone_publish_category_bg_color"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_3" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/zone_publish_category_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/m_shape_zone_publish_category_bg"
            android:drawableLeft="@drawable/zone_ico_earth"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="公开"
            android:textColor="@color/user_detail_content_blue_color"
            android:textSize="@dimen/sp_13" />
        <Button
            android:id="@+id/zone_publish_category_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/m_shape_zone_publish_category_bg"
            android:drawableLeft="@drawable/zone_ico_life"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="生活"
            android:textColor="@color/user_detail_content_blue_color"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</RelativeLayout>
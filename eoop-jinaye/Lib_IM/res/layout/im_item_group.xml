<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_64"
    android:background="@drawable/m_list_item_selector"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <ImageView
        android:id="@+id/group_item_icon"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/group_item_msgUnReadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8_fu"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@id/group_item_icon"
        android:background="@drawable/shape_bg_red_circle"
        android:gravity="center"
        android:text="12"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_11"
        android:visibility="visible" />

    <TextView
        android:id="@+id/group_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/group_item_icon"
        android:layout_marginTop="@dimen/dp_1"
        android:singleLine="true"
        android:text="个人"
        android:textColor="@color/list_text_day"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/group_item_pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/group_item_icon"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_1"
        android:src="@drawable/pending"
        android:visibility="gone" />

    <TextView
        android:id="@+id/group_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_toLeftOf="@id/group_item_type"
        android:layout_toRightOf="@id/group_item_icon"
        android:gravity="left"
        android:singleLine="true"
        android:text="张小丽"
        android:textColor="@color/list_text_title"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/group_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/group_item_icon"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toLeftOf="@id/group_item_pending"
        android:layout_toRightOf="@id/group_item_icon"
        android:ellipsize="end"
        android:gravity="bottom"
        android:paddingTop="@dimen/dp_1"
        android:singleLine="true"
        android:text="随时沟通"
        android:textColor="@color/list_text_subTitle"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ea_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_15"
            android:text="08:30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_82"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_32" >

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/white_50" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/ico_ea_circle" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_18_fu"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ea_item_photo_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_ea_photo_bg"
            android:orientation="horizontal"
            android:padding="@dimen/dp_3" >

            <ImageView
                android:id="@+id/ea_item_photo_1"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_female" />

            <ImageView
                android:id="@+id/ea_item_photo_2"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_marginLeft="@dimen/dp_3"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_male" />

            <ImageView
                android:id="@+id/ea_item_photo_3"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_marginLeft="@dimen/dp_3"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_female" />
        </LinearLayout>

        <TextView
            android:id="@+id/ea_item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="事由"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/ea_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/ico_location_small"
            android:text="南京南路20号"
            android:textColor="@color/white_70"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>
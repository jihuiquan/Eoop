<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent">    <RelativeLayout        android:id="@+id/login_capture_code_layout"        android:layout_width="fill_parent"        android:layout_height="fill_parent">        <SurfaceView            android:id="@+id/preview_view"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:layout_gravity="center" />        <com.mining.app.zxing.view.ViewfinderView            android:id="@+id/viewfinder_view"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <LinearLayout            android:id="@+id/tips"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:layout_marginLeft="@dimen/dp_32"            android:layout_marginRight="@dimen/dp_32"            android:layout_marginTop="@dimen/dp_56"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="left"                android:text="您是首次使用APP，请访问“平台首页”扫描“黄色APP授权码”激活APP!"                android:textColor="#D3D3D3"                android:textSize="@dimen/sp_14"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:id="@+id/login_capture_change_to_input_layout"            android:layout_width="@dimen/dp_225"            android:layout_height="@dimen/dp_45"            android:layout_alignParentBottom="true"            android:layout_centerHorizontal="true"            android:layout_marginBottom="@dimen/dp_100"            android:background="@drawable/shape_btn_change_input"            android:gravity="center">            <TextView                android:id="@+id/login_capture_change_to_input"                android:layout_width="wrap_content"                android:layout_height="@dimen/dp_45"                android:drawableLeft="@drawable/ico_tiaocode"                android:drawablePadding="@dimen/dp_10"                android:gravity="center"                android:padding="@dimen/dp_6"                android:text="手工输入"                android:textColor="@color/white"                android:textSize="@dimen/sp_14" />        </LinearLayout>    </RelativeLayout>    <RelativeLayout        android:id="@+id/login_capture_input_layout"        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:background="@color/viewfinder_mask"        android:visibility="gone">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/dp_30"            android:layout_marginRight="@dimen/dp_30"            android:layout_marginTop="@dimen/dp_100"            android:orientation="vertical">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <com.jianye.smart.view.MyInputTextBackView                    android:layout_width="match_parent"                    android:layout_height="@dimen/dp_50"                    android:layout_centerHorizontal="true" />                <EditText                    android:id="@+id/login_capture_input"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:layout_marginLeft="@dimen/dp_20"                    android:layout_marginRight="@dimen/dp_20"                    android:background="@color/trans_color"                    android:focusable="true"                    android:hint="输入授权码"                    android:singleLine="true"                    android:textColor="@color/user_detail_subname_color"                    android:textColorHint="@color/user_detail_subname_color"                    android:textSize="@dimen/sp_14" />            </RelativeLayout>            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="@dimen/dp_80"                android:orientation="horizontal">                <TextView                    android:id="@+id/login_capture_change_to_code"                    android:layout_width="wrap_content"                    android:layout_height="@dimen/dp_45"                    android:background="@drawable/shape_btn_change_input"                    android:drawableLeft="@drawable/ico_ercode"                    android:drawablePadding="@dimen/dp_5"                    android:gravity="center"                    android:paddingBottom="@dimen/dp_6"                    android:paddingLeft="@dimen/dp_15"                    android:paddingRight="@dimen/dp_15"                    android:paddingTop="@dimen/dp_6"                    android:text="切换二维码"                    android:textColor="@color/white"                    android:textSize="@dimen/sp_14" />                <TextView                    android:id="@+id/login_capture_done"                    android:layout_width="wrap_content"                    android:layout_height="@dimen/dp_45"                    android:layout_alignParentRight="true"                    android:layout_gravity="right"                    android:background="@drawable/shape_btn_change_input"                    android:gravity="center"                    android:paddingBottom="@dimen/dp_6"                    android:paddingLeft="@dimen/dp_25"                    android:paddingRight="@dimen/dp_25"                    android:paddingTop="@dimen/dp_6"                    android:text="确定"                    android:textColor="@color/white"                    android:textSize="@dimen/sp_14" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout>    <include layout="@layout/comm_topbar_style_3" /></FrameLayout>
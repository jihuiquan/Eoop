<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bdo_bottom_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_4"
    android:paddingTop="@dimen/dp_4"
    android:visibility="visible" >

    <TextView
        android:id="@+id/bdo_bottom_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_4"
        android:drawableTop="@drawable/tab_delete"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/tab_bar_txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/bdo_bottom_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_4"
        android:drawableTop="@drawable/tab_open"
        android:gravity="center"
        android:text="打开"
        android:textColor="@color/tab_bar_txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/bdo_bottom_openWithOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:drawablePadding="@dimen/dp_4"
        android:drawableTop="@drawable/tab_open_withother"
        android:gravity="center"
        android:text="用其他应用打开"
        android:textColor="@color/tab_bar_txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/bdo_bottom_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:drawablePadding="@dimen/dp_4"
        android:drawableTop="@drawable/tab_cloud"
        android:gravity="center"
        android:text="存到百度云"
        android:textColor="@color/tab_bar_txt_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/bdo_bottom_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/dp_4"
        android:drawableTop="@drawable/tab_more"
        android:gravity="center"
        android:text="更多"
        android:textColor="@color/tab_bar_txt_color"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="wrap_content"    android:background="@drawable/list_item_selector"    android:orientation="vertical" >    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:padding="@dimen/dp_12" >        <ImageView            android:id="@+id/bdo_cloud_item_icon"            android:layout_width="@dimen/dp_50"            android:layout_height="@dimen/dp_50"            android:layout_centerVertical="true"            android:scaleType="fitXY"            android:src="@drawable/bdo_cloud_exl" />        <RelativeLayout            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="@dimen/dp_15"            android:layout_toRightOf="@id/bdo_cloud_item_icon" >            <TextView                android:id="@+id/bdo_cloud_item_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginRight="@dimen/dp_40"                android:ellipsize="marquee"                android:marqueeRepeatLimit="marquee_forever"                android:singleLine="true"                android:text="xxx@了我"                android:textColor="@color/list_text_title_for_contac"                android:textSize="@dimen/sp_15" />            <TextView                android:id="@+id/bdo_cloud_item_time"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@id/bdo_cloud_item_name"                android:layout_marginTop="@dimen/dp_7"                android:ellipsize="end"                android:singleLine="true"                android:text="2015-02-15 10:33:34"                android:textColor="@color/chat_voice_cancle_send_color"                android:textSize="@dimen/sp_14"                android:visibility="visible" />            <ImageView                android:id="@+id/bdo_cloud_item_go"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginRight="@dimen/dp_10"                android:src="@drawable/go"                android:visibility="invisible" />            <com.jianye.smart.view.NumberCircleProgressBar                android:id="@+id/bdo_cloud_item_numberCircleProgressBar"                style="@style/NumberCircleProgressBar_Default"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:padding="@dimen/dp_10"                android:visibility="invisible" />            <Button                android:id="@+id/bdo_cloud_item_option"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:background="@drawable/btn_option_selector"                android:gravity="center"                android:paddingBottom="@dimen/dp_4"                android:paddingLeft="@dimen/dp_10"                android:paddingRight="@dimen/dp_10"                android:paddingTop="@dimen/dp_4"                android:text="下载"                android:textColor="@color/btn_option_text_color_selector"                android:textSize="@dimen/sp_12" />        </RelativeLayout>    </RelativeLayout></LinearLayout>
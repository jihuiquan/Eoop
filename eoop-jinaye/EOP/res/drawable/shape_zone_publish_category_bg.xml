<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />
            <stroke android:width="1dp" android:color="@color/zone_publish_category_circle_color" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/zone_publish_category_circle_color" />
            <corners android:bottomLeftRadius="@dimen/dp_15" android:bottomRightRadius="@dimen/dp_15" android:topLeftRadius="@dimen/dp_15" android:topRightRadius="@dimen/dp_15" />
            <stroke android:width="1dp" android:color="@color/zone_publish_category_circle_color" />
        </shape></item>
</selector>
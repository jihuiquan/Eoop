<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#c7c9cc" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#36B35A" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>